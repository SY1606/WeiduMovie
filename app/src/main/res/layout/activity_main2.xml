<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bitmap"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".view.activity.Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/log_icon_phone_default_xxhdpi" />

        <EditText
            android:id="@+id/phone_id"
            android:layout_width="@dimen/dp_280"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:textColor="#fff"
            android:textColorHint="#fff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/log_icon_lock_default_xxhdpi" />

        <EditText
            android:id="@+id/pwd_id"
            android:layout_width="@dimen/dp_280"
            android:layout_height="wrap_content"
            android:hint="登录密码"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <ImageView
            android:id="@+id/eye_id"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/log_icon_eye_default_xxhdpi" />
    </LinearLayout>


    <Button
        android:id="@+id/login_id"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:background="#f66b1d"
        android:text="登录" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <view
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三方账号快速登录"
            android:textColor="#fff" />

        <view
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_2" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center"
        android:src="@drawable/log_icon_weixin_default_xxhdpi" />
</LinearLayout>